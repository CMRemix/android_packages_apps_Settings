<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_title">
    
    <!-- app circle sidebar -->
    <PreferenceScreen
         android:id="@+id/app_circle_sidebar"
         android:title="@string/app_circle_bar_title"
         android:summary="@string/app_circle_sidebar_summary_real"
         android:fragment="com.android.settings.cmremix.AppCircleSidebar" 
         />

    <!-- Gesture anywhere -->
    <PreferenceScreen
         android:key="gesture_anywhere"
         android:fragment="com.android.settings.cmremix.gestureanywhere.GestureAnywhereSettings"
         android:title="@string/gesture_anywhere_title" 
         />

    <!-- Wakelock blocker -->
    <PreferenceScreen
         android:key="wakelock_blocker"
         android:fragment="com.android.settings.cmremix.WakeLockBlocker"
         android:title="@string/wakelock_blocker_title" 
         />

    <!-- Screen Recorder -->
    <PreferenceScreen
        android:key="screen_recorder"
        android:title="@string/screen_recorder_title"
        android:fragment="com.android.settings.cmremix.ScreenRecorderSettings"
        android:icon="@drawable/ic_settings_advanced"
        />

    <!-- Ad Blocker -->
    <PreferenceScreen
        android:key="hfm_settings"
        android:title="@string/hfm_pref_screen_title"
        android:fragment="com.android.settings.cmremix.hfm.HfmSettings" 
        />

</PreferenceScreen>
