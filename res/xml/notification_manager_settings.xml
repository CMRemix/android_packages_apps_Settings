<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/notification_manager"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">


    <PreferenceCategory
        android:key="notification_header"
        android:title="@string/notification_cat" >

    <!-- Heads up -->
    <Preference
            android:key="heads_up_notifications"
            android:title="@string/heads_up_notifications"
            android:fragment="com.android.settings.headsup.HeadsUpSettings" />

        <!-- Halo -->
    <PreferenceScreen
            android:id="@+id/halo_settings"
            android:title="@string/halo_settings_title"
            android:fragment="com.android.settings.rr.Halo" />

    <!-- Zen Mode -->
    <PreferenceScreen
            android:key="zen_mode"
            android:title="@string/zen_mode_settings_title"
            settings:keywords="@string/keywords_sounds_and_notifications_interruptions"
            android:fragment="com.android.settings.notification.ZenModeSettings" />

    <!-- When device is locked -->
    <com.android.settings.DropDownPreference
            android:key="lock_screen_notifications"
            android:title="@string/lock_screen_notifications_title"
            android:persistent="false" />

    <!-- App notifications -->
    <PreferenceScreen
            android:key="app_notifications"
            android:title="@string/app_notifications_title"
            android:fragment="com.android.settings.applications.ManageApplications">
            <extra
                android:name="classname"
                android:value="com.android.settings.Settings$NotificationAppListActivity" />
    </PreferenceScreen>

    <!-- Notification access -->
    <Preference
            android:key="manage_notification_access"
            android:title="@string/manage_notification_access_title"
            android:persistent="false"
            android:fragment="com.android.settings.notification.NotificationAccessSettings" />

    <!-- Filter notifications -->
    <PreferenceScreen
            android:title="@string/block_notifications_title"
            android:summary="@string/block_notifications_summary"
            android:fragment="com.android.settings.cyanogenmod.SpamList" />

    <!-- Notification colors -->
    <PreferenceScreen
            android:id="@+id/notification_colors"
            android:title="@string/cat_colors_title"
            android:fragment="com.android.settings.cmremix.NotificationColorSettings" />

    <!-- Notification Panel -->
    <PreferenceScreen
            android:id="@+id/notification_customizations"
            android:title="@string/notification_customizations"
            android:fragment="com.android.settings.cmremix.NotificationPanel" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/cmremix_qs" >

    <!-- Notification Panel -->
    <PreferenceScreen
            android:id="@+id/Qs_customizations"
            android:title="@string/cmremix_qs_title"
            android:fragment="com.android.settings.cmremix.QsPanel" />


     </PreferenceCategory>
     
     <PreferenceCategory
        android:key="weather_category"
        android:title="@string/weather_title" >

         <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
                android:key="status_bar_header_weather"
                android:title="@string/header_weather_title"
                android:summary="@string/header_weather_summary"
                android:defaultValue="false"/>

         <ListPreference
                android:key="weather_icon_pack"
                android:title="@string/weather_icon_pack_title"
                android:persistent="false" />

         <PreferenceScreen
                android:title="@string/weather_config_title"
                android:summary="@string/weather_config_summary" >
             <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="org.omnirom.omnijaws"
                    android:targetClass="org.omnirom.omnijaws.SettingsActivity" />
         </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_header_options"
        android:title="@string/contexual_header_title" >

         <SwitchPreference
           android:key="status_bar_custom_header"
           android:title="@string/status_bar_custom_header_title"
           android:summary="@string/status_bar_custom_header_summary"
           android:defaultValue="false"
          android:persistent="false" />

        <ListPreference
           android:key="daylight_header_pack"
           android:title="@string/daylight_header_pack_title"
           android:persistent="false"
           android:dependency="status_bar_custom_header" />

       <com.android.settings.cmremix.utils.SeekBarPreference
           android:key="status_bar_custom_header_shadow"
           android:title="@string/status_bar_custom_header_shadow_title"
           android:summary="@string/status_bar_custom_header_shadow_summary"
           android:defaultValue="0"
           android:max="100"
           settings:min="0"
           settings:unitsLeft=""
           settings:unitsRight="@string/unit_percent"
           android:persistent="false"
           android:dependency="status_bar_custom_header" />

        <com.android.settings.cmremix.utils.SeekBarPreference
            android:key="status_bar_custom_header_text_shadow"
            android:title="@string/status_bar_custom_header_text_shadow_title"
            android:summary="@string/status_bar_custom_header_text_shadow_summary"
            android:defaultValue="0"
            android:max="25"
            settings:min="0"
            settings:unitsLeft=""
            settings:unitsRight="@string/unit_percent"
            android:persistent="false" />

       <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="status_bar_custom_header_text_shadow_color"
            android:title="@string/status_bar_custom_header_text_shadow_color_title"
            android:defaultValue="0xffffffff" />

    </PreferenceCategory>

</PreferenceScreen>
