<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_title">

    <!-- Status bar tweaks -->
    <PreferenceCategory
        android:title="@string/status_bar_style_title">

    <PreferenceScreen
        android:fragment="com.android.settings.cmremix.BatterySettings"
        android:key="battery_settings"
        android:title="@string/battery_settings_title"
        android:icon="@drawable/ic_settings_battery" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="status_bar"
        android:title="@string/status_bar_settings" >

        <SwitchPreference
            android:key="status_bar_greeting"
            android:title="@string/status_bar_greeting_title"
            android:summary="@string/status_bar_greeting_summary"
        android:icon="@drawable/ic_settings_battery" />

     <PreferenceScreen
            android:key="carrier_options"
            android:fragment="com.android.settings.cmremix.CarrierLabel"
            android:layout="@layout/preference_carrierlabel"
            android:title="@string/carrier_options" />

     <PreferenceScreen
            android:fragment="com.android.settings.cmremix.slim.StatusBarClockStyle"
            android:key="clock_style_pref"
            android:title="@string/status_bar_clock"
            android:icon="@drawable/ic_statusbarclock" />

    <PreferenceScreen
            android:key="network_traffic_state"
            android:fragment="com.android.settings.cmremix.NetworkTraffic"
	    android:summary="@string/network_traffic_summary"
	    android:title="@string/network_traffic_title"
            android:icon="@drawable/ic_traffic" />

     <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="show_su_indicator"
            android:title="@string/su_indicator"
            android:summary="@string/su_indicator_summary"
            android:defaultValue="true"
            android:icon="@drawable/ic_settings_supersu" />
    </PreferenceCategory>

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_brightness_control"
        android:title="@string/status_bar_toggle_brightness"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:defaultValue="false" />


    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_show_weather"
        android:title="@string/status_bar_show_weather_title"
        android:summary="@string/status_bar_show_weather_summary"
        android:defaultValue="true" />

        <com.android.settings.cmremix.utils.cmRemiXSwitchPreference
            android:key="show_bluetooth_icon"
            android:title="@string/status_bar_bluetooth_icon"
            android:summary="@string/status_bar_bluetooth_icon_summary"
            android:defaultValue="true" />
 
        <SwitchPreference
            android:key="status_bar_show_network_activity"
            android:title="@string/status_bar_show_network_activity_title"
            android:defaultValue="true" />

    </PreferenceCategory>

    <!-- Breathing Notifications -->
    <PreferenceCategory
            android:key="breathing_notifications_title"
            android:title="@string/breathing_notifications_title">

        <SwitchPreference
            android:key="sms_breath"
            android:title="@string/sms_breath"
            android:summary="@string/sms_breath_summary"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="missed_call_breath"
            android:title="@string/title_missed_call_breath"
            android:summary="@string/missed_call_breath_summary"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="voicemail_breath"
            android:title="@string/title_voicemail_breath"
            android:summary="@string/voicemail_breath_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
