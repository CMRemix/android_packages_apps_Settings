<PreferenceScreen
    android:title="@string/status_bar_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="clock_category"
        android:title="@string/status_bar_clock_category" >

    <ListPreference
        android:key="status_bar_clock"
        android:title="@string/status_bar_clock_style_title"
        android:dialogTitle="@string/status_bar_clock_style_title"
        android:entries="@array/status_bar_clock_style_entries"
        android:entryValues="@array/status_bar_clock_style_values" />

    <ListPreference
        android:key="status_bar_am_pm"
        android:title="@string/status_bar_am_pm_title"
        android:dialogTitle="@string/status_bar_am_pm_title"
        android:entries="@array/status_bar_am_pm_entries"
        android:entryValues="@array/status_bar_am_pm_values" />

    <ListPreference
        android:key="status_bar_date"
        android:title="@string/status_bar_date_title"
        android:dialogTitle="@string/status_bar_date_title"
        android:entries="@array/status_bar_date_entries"
        android:entryValues="@array/status_bar_date_values" />

    <ListPreference
        android:key="status_bar_date_style"
        android:title="@string/status_bar_date_style"
        android:dialogTitle="@string/status_bar_date_style"
        android:entries="@array/status_bar_date_style_entries"
        android:entryValues="@array/status_bar_date_style_values" />

    <ListPreference
        android:key="status_bar_date_format"
        android:title="@string/status_bar_date_format_title"
        android:dialogTitle="@string/status_bar_date_format_title"
        android:entries="@array/status_bar_date_format_entries_values"
        android:entryValues="@array/status_bar_date_format_entries_values" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="clock_color"
        android:title="@string/clock_color_title"
        android:defaultValue="0xffffff" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="general_category"
        android:title="@string/general_options_title" >

        <PreferenceScreen
            android:key="status_bar_battery_status_settings"
            android:title="@string/status_bar_battery_status_settings_title"
            android:summary="@string/status_bar_battery_status_settings_summary"
            android:fragment="com.android.settings.cmremix.StatusBarBatteryStatusSettings" /> 

    <PreferenceScreen
        android:key="battery_bar"
        android:fragment="com.android.settings.cmremix.BatteryBar"
        android:title="@string/battery_bar"
        android:icon="@drawable/ic_settings_battery" />

    <SwitchPreference
        android:key="status_bar_greeting"
        android:title="@string/status_bar_greeting_title"
        android:summary="@string/status_bar_greeting_summary" />

    <com.android.settings.cmremix.utils.SeekBarPreferenceCham
        android:key="status_bar_greeting_timeout"
        android:title="@string/status_bar_greeting_timeout_title"
        android:max="10000"
        settings:min="100"
        settings:unitsLeft=""
        settings:unitsRight="ms"
        android:dependency="status_bar_greeting"
        android:persistent="false" />

    <PreferenceScreen
        android:key="carrier_options"
        android:fragment="com.android.settings.cmremix.CarrierLabel"
        android:layout="@layout/preference_carrierlabel"
        android:title="@string/carrier_options" />

    <!--Vector Network traffic indicator -->
    <PreferenceScreen
       android:key="network_traffic_state"
       android:fragment="com.android.settings.cmremix.NetworkTrafficFragment"
       android:summary="@string/network_traffic_vector_summary"
       android:title="@string/network_traffic_vector_title" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_show_empty_sims"
        android:defaultValue="true"
        android:title="@string/status_bar_show_unused_sims_title"
        android:summaryOn="@string/status_bar_show_unused_sims_title_summary_on"
        android:summaryOff="@string/status_bar_show_unused_sims_title_summary_off" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_brightness_control"
        android:title="@string/status_bar_toggle_brightness"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:defaultValue="false" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false" />

        <PreferenceScreen
            android:key="status_bar_signal_settings"
            android:title="@string/status_bar_signal_settings_title"
            android:summary="@string/status_bar_signal_settings_summary"
            android:fragment="com.android.settings.cmremix.StatusBarSignalSettings" />

        <PreferenceScreen
            android:key="status_bar_expanded_header_settings"
            android:title="@string/status_bar_expanded_header_settings_title"
            android:summary="@string/status_bar_expanded_header_settings_summary"
            android:fragment="com.android.settings.cmremix.StatusBarExpandedHeaderSettings" />

        <PreferenceScreen
            android:key="status_bar_notif_system_icons_settings"
            android:title="@string/status_bar_notif_system_icons_settings_title"
            android:summary="@string/status_bar_notif_system_icons_settings_summary"
            android:fragment="com.android.settings.cmremix.StatusBarNotifSystemIconsSettings" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="show_su_indicator"
        android:title="@string/su_indicator"
        android:summary="@string/su_indicator_summary"
        android:defaultValue="true" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="show_bluetooth_icon"
        android:title="@string/status_bar_bluetooth_icon"
        android:summary="@string/status_bar_bluetooth_icon_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="status_bar_ticker_enabled"
        android:title="@string/status_bar_ticker_title"
        android:summary="@string/status_bar_ticker_summary"
        android:defaultValue="true" />

    <PreferenceScreen
        android:key="breathing_notifications"
        android:fragment="com.android.settings.cmremix.BreathingNotifications"
        android:title="@string/breathing_notifications_title" />

    </PreferenceCategory>

</PreferenceScreen>
