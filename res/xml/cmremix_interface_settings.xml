<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Status bar -->
    <PreferenceScreen
        android:key="status_bar_settings"
        android:title="@string/status_bar_title"
        android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
        android:icon="@drawable/ic_settings_extdesk_hidenavbar"
        />

    <!-- Notification drawer -->
    <PreferenceScreen
        android:key="notification_drawer_settings"
        android:title="@string/notification_drawer_title"
        android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
        android:icon="@drawable/ic_settings_notification_drawer"
        />

    <!-- Recent panel settings -->
    <PreferenceScreen
        android:key="recents_panel"
        android:fragment="com.android.settings.cmremix.RecentsPanelSettings"
        android:title="@string/recents_panel_title"
        android:icon="@drawable/ic_settings_advanced"
        />

    <!-- Lockscreen misc -->
    <PreferenceScreen
        android:key="lock_cmremix"
        android:title="@string/cmremix_lock_title"
        android:fragment="com.android.settings.cmremix.LockMisc"
        android:icon="@drawable/ic_settings_security" 
        />

    <!-- Display and Animations -->
    <PreferenceScreen
        android:id="@+id/disp_anim_settings"
        android:title="@string/disp_anim_settings_title"
        android:fragment="com.android.settings.cmremix.DisplayAnimationsSettings"
        android:icon="@drawable/ic_settings_home"
        />

    <!-- Buttons settings -->
    <PreferenceScreen
        android:key="button_settings"
        android:title="@string/button_pref_title"
        android:fragment="com.android.settings.ButtonSettings"
        android:icon="@drawable/ic_settings_buttons"
        />

        <!-- cmRemiX Custom Settings -->
    <PreferenceScreen
        android:id="@+id/cmremix_custom_settings"
        android:title="@string/cmremix_custom_title"
        android:fragment="com.android.settings.cmremix.CustomSettings"
        android:icon="@drawable/ic_settings_system"
        />

        <!-- Change Log -->
    <PreferenceScreen android:key="changelog"
        android:title="@string/changelog_title"
        android:icon="@drawable/ic_settings_about"
        android:fragment="com.android.settings.cmremix.ChangeLog" />

</PreferenceScreen>
