<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/cmremix_tweaks_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Recent panel settings -->
    <PreferenceScreen
         android:key="recents_panel"
         android:fragment="com.android.settings.cmremix.RecentsPanelSettings"
         android:title="@string/recents_panel_title"
         android:icon="@drawable/ic_recents"
         />

    <!-- Heads up notifications -->
    <Preference
         android:key="heads_up_enabled"
         android:fragment="com.android.settings.cmremix.HeadsUpSettings"
         android:title="@string/category_heads_up" 
         android:icon="@drawable/ic_settings_viper" />

    <!-- Animation Controls -->
    <PreferenceScreen
        android:key="animation_settings"
        android:title="@string/animation_settings_title"
        android:fragment="com.android.settings.cmremix.animations.AnimationSettings"
        android:icon="@drawable/ic_settings_animations"
        />

    <!-- App Circle sidebar -->
    <PreferenceScreen
        android:key="app_circle_bar"
        android:title="@string/app_circle_bar_title"
        android:fragment="com.android.settings.cmremix.AppCircleBar"
        android:icon="@drawable/ic_settings_appcirclebar"
        />

    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:title="@string/gesture_anywhere_title"
        android:fragment="com.android.settings.cmremix.gestureanywhere.GestureAnywhereSettings"
        android:icon="@drawable/ic_settings_gestureanywhere"
        />

    <!-- Wakelock blocker -->
    <PreferenceScreen
        android:key="wakelock_blocker"
        android:title="@string/wakelock_blocker_title"
        android:fragment="com.android.settings.cmremix.WakeLockBlocker"
        android:icon="@drawable/ic_settings_wakelock_blocker"
        />

    <!-- Ad Blocker -->
    <PreferenceScreen
        android:key="hfm_settings"
        android:title="@string/hfm_pref_screen_title"
        android:fragment="com.android.settings.cmremix.hfm.HfmSettings" 
        android:icon="@drawable/ic_settings_ad_blocker"
        />

    <!-- Smart Control -->
    <PreferenceScreen
         android:id="@+id/smartcontrol_settings"
         android:title="@string/smartcontrol_settings_title"
         android:fragment="com.android.settings.cmremix.SmartControl"
         android:icon="@drawable/ic_settings_smartcontrol"
         />

</PreferenceScreen>
