<PreferenceScreen

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/cmremix_statusbar_title">

     <PreferenceCategory
        android:title="@string/icons">

        <com.android.settings.cmremix.Preferences.SystemSettingSwitchPreference
    	   android:key="bluetooth_show_battery"
           android:title="@string/bluetooth_battery_title"
           android:summary="@string/bluetooth_battery_summary"
           android:defaultValue="false" />

        <com.android.settings.cmremix.Preferences.SystemSettingSwitchPreference
           android:key="status_bar_cmr_logo"
           android:title="@string/status_bar_cmr_logo_title"
           android:summary="@string/status_bar_cmr_logo_summary"
           android:defaultValue="false" />

        <com.android.settings.cmremix.Preferences.SystemSettingSwitchPreference
            android:key="show_fourg"
            android:title="@string/show_4g_title"
            android:summary="@string/show_4g_summary"
            android:defaultValue="false" />

        <com.android.settings.cmremix.Preferences.SystemSettingSwitchPreference
            android:key="show_threeg"
            android:title="@string/show_3g_title"
            android:summary="@string/show_3g_summary"
            android:defaultValue="false" />


     </PreferenceCategory>

     <PreferenceCategory
            android:key="battery_bar"
            android:title="@string/battery_bar">

            <ListPreference
                android:key="battery_bar_list"
                android:title="@string/battery_bar_location"
                android:entries="@array/battery_bar_entries"
                android:entryValues="@array/battery_bar_values" />

            <ListPreference
                android:key="battery_bar_style"
                android:title="@string/battery_bar_style_title"
                android:entries="@array/battery_bar_style_entries"
                android:entryValues="@array/battery_bar_style_values" />

            <SwitchPreference
                android:key="battery_bar_animate"
                android:title="@string/battery_bar_animate_title"
                android:summary="@string/battery_bar_animate_summary" />

            <ListPreference
                android:key="battery_bar_thickness"
                android:title="@string/battery_bar_thickness_title"
                android:entries="@array/battery_bar_thickness_entries"
                android:entryValues="@array/battery_bar_thickness_values" />

        </PreferenceCategory>

 
         <PreferenceScreen
           android:key="network_traffic_settings"
           android:title="@string/network_traffic_title"
           android:fragment="com.android.settings.cmremix.NetworkTrafficSettings" />


</PreferenceScreen>
