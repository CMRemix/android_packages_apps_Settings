<PreferenceScreen

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/cmr_misc_title">


    <!-- SELinux -->
        <Preference
            android:key="selinux_switch"
            android:title="@string/selinux_switch_title"
            android:summary="@string/selinux_switch_summary"
			android:icon="@drawable/cmremix_selinux_icon"
            android:selectable="false"/>

        <SwitchPreference
            android:key="selinux"
            android:title="@string/selinux_title"
            android:defaultValue="false" />

        <com.android.settings.cmremix.Preferences.SystemSettingSwitchPreference
                android:key="fingerprint_success_vib"
                android:title="@string/fprint_sucess_vib_title"
                android:summary="@string/fprint_sucess_vib_summary"
				android:icon="@drawable/cmremix_fingerprint_icon"
                android:defaultValue="true" />

        <!-- Weather Settings -->
       <Preference
           android:id="@+id/weather_settings"
           android:title="@string/weather_settings_title"
		   android:icon="@drawable/cmremix_weather_main_icon">
           <intent
               android:action="android.intent.action.MAIN"
               android:targetClass="com.cyanogenmod.lockclock.preference.Preferences"
               android:targetPackage="com.cyanogenmod.lockclock" >
               <extra android:name=":android:show_fragment"
                   android:value="com.cyanogenmod.lockclock.preference.WeatherPreferences" />
           </intent>
       </Preference>

     <!-- Ad Blocker -->
        <Preference
             android:title="@string/adaway_settings_title"
			 android:icon="@drawable/cmremix_adblock_icon">
             <intent
                 android:action="android.intent.action.MAIN"
                 android:targetPackage="org.adaway"
                 android:targetClass="org.adaway.ui.BaseActivity" />
        </Preference>


        <!-- CMRemix Updater -->
        <PreferenceScreen android:key="cmremix_updates"
                android:title="@string/cmremixupdate_settings_title"
                android:icon="@drawable/ic_cmremix_ota_icon_2">
                android:summary="@string/cmremixupdate_settings_summary">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.cmremix.updater"
                    android:targetClass="com.cmremix.updater.UpdatesSettings" />
        </PreferenceScreen>

        <com.android.settings.cmremix.Preferences.SystemSettingSwitchPreference
                android:key="cmremix_ota_fab"
                android:title="@string/cmremix_ota_fab_title"
                android:summary="@string/cmremix_ota_fab_summary"
                android:defaultValue="true" />

</PreferenceScreen>
